<div class="bg-white shadow-md rounded-lg p-6">
  <%= if Phoenix.Flash.get(@flash, :error) do %>
    <div
      class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4"
      role="alert"
    >
      <span class="block sm:inline"><%= Phoenix.Flash.get(@flash, :error) %></span>
    </div>
  <% end %>

  <div class="mb-6">
    <%= if @api_key_set do %>
      <div class="flex items-center justify-between">
        <span class="text-green-600 font-medium">API Key is set</span>
        <%= if @connected_to_realtime do %>
          <button
            phx-click="disconnect_from_realtime"
            class="bg-yellow-500 hover:bg-yellow-600 text-black px-4 py-2 rounded-md transition duration-150 ease-in-out"
          >
            Disconnect
          </button>
        <% else %>
          <button
            phx-click="connect_to_realtime"
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition duration-150 ease-in-out"
          >
            Connect
          </button>
        <% end %>
      </div>
    <% else %>
      <p class="text-yellow-600 font-medium">
        Please set your OpenAI API Key in the header to begin.
      </p>
    <% end %>
  </div>

  <%= if @connection_error do %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4">
      Connection error: <%= @connection_error %>
    </div>
  <% end %>

  <%= if @connected_to_realtime do %>
    <div id="voice-chat" phx-hook="VoiceChat" class="mt-6">
      <div class="flex space-x-4 mb-4">
        <button
          id="push-to-talk-btn"
          class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md flex-1 transition duration-150 ease-in-out"
        >
          Hold to Talk
        </button>
      </div>
      <div
        id="transcript"
        class="bg-gray-100 p-4 rounded-md min-h-[200px] max-h-[400px] overflow-y-auto"
      >
      </div>
    </div>
  <% end %>
</div>
